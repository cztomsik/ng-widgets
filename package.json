{
  "name": "ngWidgets",
  "version": "1.0.1",
  "description": "Collection of reusable angularjs components",
  "main": "index.js",
  "scripts": {
    "patch": "npm run build && npm version patch",
    "build": "npm run verify && browserify index.js | uglifyjs --no-mangle > ngWidgets.js",
    "doc": "mocha --reporter doc --require test/runner/example-doc > docs/spec.html",
    "verify": "npm test && npm run lint",
    "test": "mocha",
    "lint": "jshint index.js src/*.js",
    "watch": "watchify index.js -o ngWidgets.js --debug",
    "watch-test": "mocha --check-leaks --reporter spec --watch --growl"
  },
  "author": "cztomsik",
  "license": "ISC",
  "dependencies": {
    "angular": "~1.2.7"
  },
  "devDependencies": {
    "watchify": "~0.5.0",
    "browserify": "~3.19.1",
    "uglify-js": "2.4.8",
    "chance": "~0.5.4",
    "chai": "~1.8.1",
    "mocha": "~1.17.0",
    "jshint": "~2.4.1"
  },
  "browser": {
    "angular": "./shims/angular.js"
  }
}
